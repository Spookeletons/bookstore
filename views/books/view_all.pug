extends ../layout

block content
    h3 Books
    a(href='/books/add') Add New Book
    table
        thead
            tr
                th Title
                th Genre
                th Page count
                th Publisher
                th Image
                th Description
        tbody
            each book in books
                tr
                    td= book.title
                    td= book.genre
                    td= book.pages
                    td= book.publisher
                    td= book.image
                    td= book.description