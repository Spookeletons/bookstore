extends ../layout

block content
    h3 #{author.first} #{author.last}
    a(href=`/authors/edit/${author.id}`) Edit Author
    a(href=`/authors/delete/${author.id}`) Delete Author
    a(href='/authors') Back to Authors
    div
        p DOB: #{author.dob}
    div.books
        h4 Books by the Author
        table
            thead
                tr
                    th Title
                    th Genre
                    th Page Count
                    th Publisher
                    th Image
                    th Description
                    th
            tbody
                each book in author.books
                    tr
                        td= book.title
                        td= book.genre
                        td= book.pages
                        td= book.publisher
                        td= book.image
                        td= book.description
                        td
                            a(href=`/books/profile/${book.id}`) View Book